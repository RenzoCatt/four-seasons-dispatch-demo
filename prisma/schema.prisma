generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id           String            @id @default(cuid())
  name         String
  phone        String?
  email        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  notes        String?
  company      String?
  customerType CustomerType?     @default(HOMEOWNER)
  displayName  String?
  firstName    String?
  lastName     String?
  role         String?
  addresses    CustomerAddress[]
  emails       CustomerEmail[]
  phones       CustomerPhone[]
  tags         CustomerTag[]
  invoices     Invoice[]
  locations    Location[]
  workOrders   WorkOrder[]
}

model CustomerEmail {
  id         String   @id @default(cuid())
  customerId String
  value      String
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, value])
}

model CustomerPhone {
  id         String    @id @default(cuid())
  customerId String
  type       PhoneType @default(MOBILE)
  value      String
  note       String?
  createdAt  DateTime  @default(now())
  customer   Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, type, value])
}

model CustomerAddress {
  id           String   @id @default(cuid())
  customerId   String
  street       String
  unit         String?
  municipality String
  province     String
  postalCode   String
  addressNotes String?
  isBilling    Boolean  @default(false)
  isService    Boolean  @default(true)
  createdAt    DateTime @default(now())
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model CustomerTag {
  id         String   @id @default(cuid())
  customerId String
  value      String
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, value])
}

model Location {
  id         String      @id @default(cuid())
  customerId String
  name       String
  address    String
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  invoices   Invoice[]
  customer   Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  workOrders WorkOrder[]
}

model WorkOrder {
  id            String              @id @default(cuid())
  customerId    String
  locationId    String
  description   String?
  completedAt   DateTime?
  createdAt     DateTime            @default(now())
  jobNumber     Int                 @default(autoincrement())
  updatedAt     DateTime            @updatedAt
  status        WorkOrderStatus     @default(SCHEDULED)
  dispatchEvent DispatchEvent?
  invoice       Invoice?
  customer      Customer            @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location      Location            @relation(fields: [locationId], references: [id], onDelete: Cascade)
  lineItems     WorkOrderLineItem[]
}

model Invoice {
  id            String            @id @default(cuid())
  invoiceNumber Int               @default(autoincrement())
  customerId    String
  locationId    String
  workOrderId   String            @unique
  status        InvoiceStatus     @default(DRAFT)
  subtotal      Int               @default(0)
  tax           Int               @default(0)
  total         Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  publicToken   String?           @unique
  sentAt        DateTime?
  customer      Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location      Location          @relation(fields: [locationId], references: [id], onDelete: Cascade)
  workOrder     WorkOrder         @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
  lineItems     InvoiceLineItem[]
}

model WorkOrderLineItem {
  id          String    @id @default(cuid())
  workOrderId String
  type        String
  description String
  details     String?
  qty         Float     @default(1)
  unitPrice   Float     @default(0)
  taxable     Boolean   @default(true)
  createdAt   DateTime  @default(now())
  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
}

model InvoiceLineItem {
  id          String       @id @default(cuid())
  invoiceId   String
  type        LineItemType
  description String
  details     String?
  quantity    Int          @default(1)
  unitPrice   Int          @default(0)
  total       Int          @default(0)
  createdAt   DateTime     @default(now())
  invoice     Invoice      @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model DispatchEvent {
  id          String         @id @default(cuid())
  workOrderId String?        @unique
  techId      String
  startAt     DateTime
  endAt       DateTime
  status      DispatchStatus @default(SCHEDULED)
  type        EventType      @default(JOB)
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  workOrder   WorkOrder?     @relation(fields: [workOrderId], references: [id], onDelete: Cascade)

  @@index([techId, startAt])
}

model PriceBookUpload {
  id            String          @id @default(cuid())
  createdAt     DateTime        @default(now())
  filename      String
  checksum      String
  notes         String?
  isActive      Boolean         @default(false)
  effectiveDate DateTime?
  items         PriceBookItem[]
}

model PriceBookItem {
  id             String          @id @default(cuid())
  uploadId       String
  sheet          String
  category       String
  code           String
  name           String
  description    String?
  taxableDefault Boolean         @default(true)
  hours          Decimal?        @db.Decimal(10, 2)
  equipment      Decimal?        @db.Decimal(10, 2)
  hourlyRate     Decimal?        @db.Decimal(10, 2)
  materialMarkUp Decimal?        @db.Decimal(10, 2)
  upload         PriceBookUpload @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  rates          PriceBookRate[]
}

model PriceBookRate {
  id        String        @id @default(cuid())
  itemId    String
  tier      PricingTier
  unitPrice Decimal       @db.Decimal(10, 2)
  item      PriceBookItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, tier])
}

model PricebookIndustry {
  id         String              @id @default(uuid())
  name       String              @unique
  sortOrder  Int                 @default(0)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  categories PricebookCategory[]
}

model PricebookCategory {
  id         String              @id @default(uuid())
  industryId String
  parentId   String?
  name       String
  sortOrder  Int                 @default(0)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  industry   PricebookIndustry   @relation(fields: [industryId], references: [id], onDelete: Cascade)
  parent     PricebookCategory?  @relation("CategoryTree", fields: [parentId], references: [id], onDelete: Cascade)
  children   PricebookCategory[] @relation("CategoryTree")
  items      PricebookItemNew[]

  @@unique([industryId, name])
  @@index([industryId])
  @@index([parentId])
}

model PricebookItemNew {
  id          String             @id @default(uuid())
  categoryId  String
  code        String
  name        String
  description String?
  unit        String?
  sortOrder   Int                @default(0)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  category    PricebookCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  rates       PricebookRateNew[]

  @@unique([categoryId, code])
  @@index([categoryId])
  @@index([name])
}

model PricebookRateNew {
  id             String           @id @default(uuid())
  itemId         String
  tier           PriceTier
  unitPrice      Decimal          @db.Decimal(12, 2)
  hours          Decimal?         @db.Decimal(10, 2)
  hourlyRate     Decimal?         @db.Decimal(12, 2)
  equipment      Decimal?         @db.Decimal(12, 2)
  materialMarkup Decimal?         @db.Decimal(10, 2)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  item           PricebookItemNew @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([itemId, tier])
  @@index([tier])
}

enum PhoneType {
  MOBILE
  HOME
  WORK
  OTHER
}

enum CustomerType {
  HOMEOWNER
  BUSINESS
}

enum WorkOrderStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

enum LineItemType {
  LABOR
  PART
  FEE
  SERVICE
  MATERIAL
}

enum DispatchStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETE
  CANCELED
}

enum EventType {
  JOB
  TASK
  MEETING
}

enum PricingTier {
  MEMBER
  STANDARD
  RUMI
}

enum PriceTier {
  STANDARD
  MEMBER
  RUMI
}
