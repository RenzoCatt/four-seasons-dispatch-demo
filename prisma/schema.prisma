generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id           String            @id @default(cuid())
  name         String
  phone        String?
  email        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  notes        String?
  company      String?
  customerType CustomerType?     @default(HOMEOWNER)
  displayName  String?
  firstName    String?
  lastName     String?
  role         String?
  addresses    CustomerAddress[]
  emails       CustomerEmail[]
  phones       CustomerPhone[]
  tags         CustomerTag[]
  invoices     Invoice[]
  locations    Location[]
  workOrders   WorkOrder[]
}

model CustomerEmail {
  id         String   @id @default(cuid())
  customerId String
  value      String
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, value])
}

model CustomerPhone {
  id         String    @id @default(cuid())
  customerId String
  type       PhoneType @default(MOBILE)
  value      String
  note       String?
  createdAt  DateTime  @default(now())
  customer   Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, type, value])
}

model CustomerAddress {
  id           String   @id @default(cuid())
  customerId   String
  street       String
  unit         String?
  municipality String
  province     String
  postalCode   String
  addressNotes String?
  isBilling    Boolean  @default(false)
  isService    Boolean  @default(true)
  createdAt    DateTime @default(now())
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model CustomerTag {
  id         String   @id @default(cuid())
  customerId String
  value      String
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([customerId, value])
}

model Location {
  id         String      @id @default(cuid())
  customerId String
  name       String
  address    String
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  invoices   Invoice[]
  customer   Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  workOrders WorkOrder[]
}

model WorkOrder {
  id            String          @id @default(cuid())
  customerId    String
  locationId    String
  description   String?
  completedAt   DateTime?
  createdAt     DateTime        @default(now())
  jobNumber     Int             @default(autoincrement())
  updatedAt     DateTime        @updatedAt
  status        WorkOrderStatus @default(SCHEDULED)
  dispatchEvent DispatchEvent?
  invoice       Invoice?
  customer      Customer        @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location      Location        @relation(fields: [locationId], references: [id], onDelete: Cascade)
}

model Invoice {
  id            String            @id @default(cuid())
  invoiceNumber Int               @default(autoincrement())
  customerId    String
  locationId    String
  workOrderId   String            @unique
  status        InvoiceStatus     @default(DRAFT)
  subtotal      Int               @default(0)
  tax           Int               @default(0)
  total         Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  publicToken   String?           @unique
  sentAt        DateTime?
  customer      Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location      Location          @relation(fields: [locationId], references: [id], onDelete: Cascade)
  workOrder     WorkOrder         @relation(fields: [workOrderId], references: [id], onDelete: Cascade)
  lineItems     InvoiceLineItem[]
}

model InvoiceLineItem {
  id          String       @id @default(cuid())
  invoiceId   String
  type        LineItemType
  description String
  quantity    Int          @default(1)
  unitPrice   Int          @default(0)
  total       Int          @default(0)
  createdAt   DateTime     @default(now())
  invoice     Invoice      @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model DispatchEvent {
  id          String         @id @default(cuid())
  workOrderId String         @unique
  techId      String
  startAt     DateTime
  endAt       DateTime
  status      DispatchStatus @default(SCHEDULED)
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  workOrder   WorkOrder      @relation(fields: [workOrderId], references: [id], onDelete: Cascade)

  @@index([techId, startAt])
}

enum PhoneType {
  MOBILE
  HOME
  WORK
  OTHER
}

enum CustomerType {
  HOMEOWNER
  BUSINESS
}

enum WorkOrderStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

enum LineItemType {
  LABOR
  PART
  FEE
}

enum DispatchStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETE
  CANCELED
}
