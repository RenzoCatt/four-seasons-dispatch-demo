generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations  Location[]
  workOrders WorkOrder[]
  invoices   Invoice[]
}

model Location {
  id         String   @id @default(cuid())
  customerId String
  name       String
  address    String
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer  Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  workOrders WorkOrder[]
  invoices   Invoice[]
}

model WorkOrder {
  id          String   @id @default(cuid())
  jobNumber   Int      @default(autoincrement())
  customerId  String
  locationId  String
  status      WorkOrderStatus @default(SCHEDULED)
  description String?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  invoice  Invoice?

  dispatchEvent DispatchEvent?
}

enum WorkOrderStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELED
}

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber Int      @default(autoincrement())

  customerId  String
  locationId  String
  workOrderId String  @unique

  status      InvoiceStatus @default(DRAFT)

  subtotal    Int     @default(0) // cents
  tax         Int     @default(0) // cents
  total       Int     @default(0) // cents

  publicToken String?  @unique  // For public portal link
  sentAt      DateTime?        // When invoice was sent

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  // Owning side of the relation (fields + references ONLY here)
  workOrder WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)

  lineItems InvoiceLineItem[]
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

model InvoiceLineItem {
  id          String   @id @default(cuid())
  invoiceId   String

  type        LineItemType
  description String
  quantity    Int      @default(1)
  unitPrice   Int      @default(0) // cents
  total       Int      @default(0) // cents

  createdAt   DateTime @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

enum LineItemType {
  LABOR
  PART
  FEE
}

model DispatchEvent {
  id        String   @id @default(cuid())
  workOrderId String @unique
  techId    String
  startAt   DateTime
  endAt     DateTime
  status    DispatchStatus @default(SCHEDULED)
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workOrder WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)

  @@index([techId, startAt])
}

enum DispatchStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETE
  CANCELED
}
